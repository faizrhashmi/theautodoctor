# pnpm configuration for AskAutoDoctor

# Use workspace mode for better monorepo support (future-proof)
shamefully-hoist=false
strict-peer-dependencies=false

# Speed optimizations
prefer-frozen-lockfile=true
auto-install-peers=true
dedupe-peer-dependents=true

# Next.js specific - hoist certain packages to avoid issues
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@types/*

# Store configuration (optional - improves disk usage)
# store-dir=~/.pnpm-store

# Logging
loglevel=warn
