{
  "extends": [
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "project": [
      "tsconfig.json"
    ]
  },
  "overrides": [
    {
      "files": ["*.js", "*.cjs", "next.config.js", "postcss.config.js", "tailwind.config.js"],
      "parser": "espree",
      "parserOptions": {
        "ecmaVersion": 2020
      }
    }
  ]
}
